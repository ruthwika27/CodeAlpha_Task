import random

# Predefined list of words
words = ["apple", "banana", "orange", "grapes", "mango"]

# Choose a random word from the list
chosen_word = random.choice(words)
guessed_letters = []
attempts = 6

print("ğŸ® Welcome to Hangman Game!")
print("_ " * len(chosen_word))

while attempts > 0:
    guess = input("\nGuess a letter: ").lower()

    if not guess.isalpha() or len(guess) != 1:
        print("âŒ Please enter a single alphabet letter.")
        continue

    if guess in guessed_letters:
        print("âš ï¸ You already guessed that letter.")
        continue

    guessed_letters.append(guess)

    if guess in chosen_word:
        print("âœ… Good guess!")
    else:
        attempts -= 1
        print(f"âŒ Wrong guess! Attempts left: {attempts}")

    # Show current progress
    display_word = ""
    for letter in chosen_word:
        if letter in guessed_letters:
            display_word += letter + " "
        else:
            display_word += "_ "
    print(display_word.strip())

    if all(letter in guessed_letters for letter in chosen_word):
        print("\nğŸ‰ Congratulations! You guessed the word:", chosen_word)
        break
else:
    print("\nğŸ˜¢ Out of attempts! The word was:", chosen_word)
